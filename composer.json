{
    "name": "apantle/hashmapper",
    "description": "Simple Ordered Hashmap Object Transformer (array_map for associative arrays)",
    "type": "library",
    "require": {
	    "php": "~7 || ~8"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2||^8||^9",
        "apantle/fun-php": "~0.3",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "files": [ "src/functions.php" ],
        "psr-4": { "Apantle\\HashMapper\\": "src/" }
    },
    "license": "MIT",
    "config": {
        "bin-dir": "./"
    },
    "scripts": {
        "tests": "phpunit",
        "coding-style": "php-cs-fixer fix --dry-run --diff --config=.php_cs.dist"
    },
    "authors": [
        {
            "name": "Jesus E. Franco Martinez",
            "email": "tezcatl@fedoraproject.org"
        }
    ]
}
